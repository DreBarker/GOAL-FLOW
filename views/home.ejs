        const replyImageSrc = userAvatar ? userAvatar :  "./assets/images/profile-placeholder.jpg";

        postProfile.innerHTML=`
                               <a href="/user-profile/${post.post_owner_id}"> 
                                 <img src="${postImageSrc}" alt="profile-image">
